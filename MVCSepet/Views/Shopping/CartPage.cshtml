@model ShoppingVM
@{
    ViewBag.Title = "CartPage";
}

@Html.ActionLink("Alışverişe Devam","ListProducts",null, new {@class="btn btn-primary"})

@if (ViewBag.SepetBos != null)
{
    <h1 style="color:red">@ViewBag.SepetBos</h1>
}
else
{
    <div class="jumbotron">
        Ödemeniz gereken toplam tutar => @Model.Cart.TotalPrice Siparişi onaylamak için lütfen @Html.ActionLink("tıklayınız","SiparisiOnayla")
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Ürün İsmi</th>
                <th>Ürün Fiyatı</th>
                <th>Ürün Adedi</th>
                <th>Ara Fiyat</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (CartItem item in Model.Cart.Sepetim)
            {
               <tr>
                   <td>@item.ProductName</td>
                   <td>@item.UnitPrice</td>
                   <td>@item.Amount</td>
                   <td>@item.SubTotal</td>
                   <td>@Html.ActionLink("Sepetten Çıkar", "RemoveFromCart", new { id = item.ID }, new {@class="btn btn-danger"})</td>
               </tr>
            }
        </tbody>
    </table>
}
